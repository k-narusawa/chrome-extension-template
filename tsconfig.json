{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "build/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "src",
    "paths": {
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "./declaration.d.ts"],
  "exclude": ["node_modules"]
}
